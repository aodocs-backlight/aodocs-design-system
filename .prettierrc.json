{
  "arrowParens": "avoid",
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "htmlWhitespaceSensitivity": "ignore",
  "endOfLine": "auto",
  "plugins": ["./node_modules/@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^lit(.*)",
    "^@material(.*)",
    "<THIRD_PARTY_MODULES>",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}
